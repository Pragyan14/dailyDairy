      <div class="nav-links">
        <a href="/home">HOME</a>
        <a href="#">ABOUT</a>
        <a href="#">HELP</a>
      </div>
    </div>

    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">
      
      <% taskArray.forEach(function(item){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkBox"  />
            <p><%= item.task %></p>
            <button class="deleteBtn"><i class="fa-regular fa-trash-can"></i></button>
            <input type="hidden" name="deleteItemId" value="<%=item._id%>" />
          </div>
        </form>
      <% }) %>

      <form class="item" action="/addTask" method="post">
        <input type="text" name="newTask" placeholder="Add Task" autocomplete="off" required/>
        <button type="submit" class="addBtn">+</button>
      </form>
    </div>
