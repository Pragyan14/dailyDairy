<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>KEEPER</title>
    <link rel="stylesheet" href="/css/viewPage.css" />
    <script
      src="https://kit.fontawesome.com/f90678a76f.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="nav">
      <input type="checkbox" id="nav-check" />
      <div class="nav-header">
        <div class="nav-title">Keeper</div>
      </div>
      <div class="nav-btn">
        <label for="nav-check">
          <span></span>
          <span></span>
          <span></span>
        </label>
      </div>

      <div class="nav-links">
        <a href="/home">HOME</a>
        <a href="#">ABOUT</a>
        <a href="#">HELP</a>
      </div>
    </div>

    <div class="container">
      <div id="heading">
        <h1><%= listTitle %></h1>
      </div>

      <% taskArray.forEach(function(item){ %>
      <form action="/delete" method="post" class="deleteForm">
        <div class="item">
          <input type="checkbox" name="checkBox"  />
          <p><%= item.task %></p>
          <button class="deleteBtn" type="submit">
            <i class="fa-regular fa-trash-can"></i>
          </button>
          <input type="hidden" name="itemId" value="<%=item._id%>" />
        </div>
      </form>
      <% }) %>

      <form class="addItemForm" action="/addTask" method="post">
        <input
          type="text"
          name="newTask"
          placeholder="Add Task"
          autocomplete="off"
          required
        />
        <button type="submit" class="addBtn">+</button>
      </form>
    </div>
    <footer>
      <div class="footerDiv">
        <div class="regards">
          <p>Crafted with ðŸ’š by Pragyan</p>
        </div>
        <div class="icon">
          <a href="https://www.linkedin.com/in/pragyan-patidar/" target="_blank"
            ><i class="fa-brands fa-linkedin fa-2xl"></i
          ></a>
          <a href="https://github.com/Pragyan14" target="_blank"
            ><i class="fa-brands fa-github fa-2xl"></i
          ></a>
          <a href="https://www.instagram.com/pragyanpatidar/" target="_blank"
            ><i class="fa-brands fa-square-instagram fa-2xl"></i
          ></a>
        </div>
      </div>
    </footer>
  </body>
</html>
